;; -*- mode: emacs-lisp -*-
;; This file is loaded by Spacemacs at startup.
;; It must be stored in your home directory.

;; Configuration Layers
;; --------------------

(setq-default
 dotspacemacs-configuration-layer-path '()
 dotspacemacs-configuration-layers '(osx
                                     auctex
                                     git
                                     irony-mode
                                     slime
                                     nikki93)
 dotspacemacs-excluded-packages '(evil-search-highlight-persist
                                  git-gutter-fringe
                                  popwin
                                  guide-key-tip))

;; Settings
;; --------

(setq-default
 dotspacemacs-startup-banner nil
 dotspacemacs-themes '(leuven monokai)
 dotspacemacs-leader-key "SPC"
 dotspacemacs-major-mode-leader-key ";"
 dotspacemacs-command-key ":"
 dotspacemacs-guide-key-delay 0.4
 dotspacemacs-fullscreen-at-startup nil
 dotspacemacs-maximized-at-startup t
 dotspacemacs-active-transparency 90
 dotspacemacs-inactive-transparency 90
 dotspacemacs-mode-line-unicode-symbols t
 dotspacemacs-smooth-scrolling t
 dotspacemacs-feature-toggle-leader-on-jk nil
 dotspacemacs-smartparens-strict-mode nil
 dotspacemacs-persistent-server nil
 dotspacemacs-default-package-repository nil)

;; Initialization Hooks
;; --------------------

(defun dotspacemacs/init ()
  (defadvice load-theme 
      (before theme-dont-propagate activate)
    (mapcar #'disable-theme custom-enabled-themes)))

(defun dotspacemacs/config ()
  (remove-hook 'prog-mode-hook 'auto-complete-mode)
  (remove-hook 'c-mode-common-hook 'ac-cc-mode-setup)
  (setq ac-modes '(emacs-lisp-mode
                   lisp-mode
                   lisp-interaction-mode
                   slime-repl-mode))
  (setq company-global-modes '(c-mode
                               cc-mode
                               c++-mode
                               objc-mode))

  (add-hook 'lisp-mode-hook 'aggressive-indent-mode)

  (when (eq system-type 'darwin)
    (spacemacs/set-font "Menlo" 11)
    (setq ns-use-native-fullscreen nil))

  (when (eq system-type 'windows-nt)
    (spacemacs/set-font "Source Code Pro" 9)

    (setq w32-lwindow-modifier 'hyper)
    (global-set-key (kbd "H-1") 'select-window-1)
    (global-set-key (kbd "H-2") 'select-window-2)
    (global-set-key (kbd "H-3") 'select-window-3)
    (global-set-key (kbd "H-4") 'select-window-4)
    (global-set-key (kbd "H-5") 'select-window-5)
    (global-set-key (kbd "H-6") 'select-window-6)
    (global-set-key (kbd "H-7") 'select-window-7)

    (setq ispell-program-name "c:/msys64/mingw64/bin/aspell.exe")
    (setq magit-git-executable "c:/Users/user/AppData/Local/GitHub/PortableGit_c2ba306e536fdf878271f7fe636a147ff37326ad/bin/git.exe")

    (add-to-list 'default-frame-alist '(left . 110))
    (add-to-list 'default-frame-alist '(top . 79))
    (add-to-list 'default-frame-alist '(height . 83))
    (add-to-list 'default-frame-alist '(width . 327)))

  (global-set-key (kbd "C-c 1") 'select-window-1)
  (global-set-key (kbd "C-c 2") 'select-window-2)
  (global-set-key (kbd "C-c 3") 'select-window-3)
  (global-set-key (kbd "C-c 4") 'select-window-4)
  (global-set-key (kbd "C-c 5") 'select-window-5)
  (global-set-key (kbd "C-c 6") 'select-window-6)
  (global-set-key (kbd "C-c 7") 'select-window-7)

  (setq-default fill-column 80)
  (setq show-paren-delay 0)
  (add-hook 'lisp-mode-hook 'show-paren-mode)

  (setq c-default-style "bsd" c-basic-offset 4)
  (c-set-offset 'case-label '+))

